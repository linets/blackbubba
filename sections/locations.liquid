            <p class="location_title">{{ location.settings.location }}</p>
          {% endif %} 
          {% if location.settings.schedule != blank %}
            <div class="location_schedule">{{ location.settings.schedule }}</div>
          {% endif %} 
          {% if location.settings.address != blank %}
            <div class="location_address">{{ location.settings.address }}</div>
          {% endif %} 
