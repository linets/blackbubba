</div>

{% schema %}
{
  "name": "Locations",
  "max_blocks": 4,
  "class": "locations-section", 
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title" 
    }
  ],
  "blocks": [
    {
      "type": "location",
      "name": "location",
      "settings": [
        {
          "type": "text",
          "id": "location",
          "label": "Titulo de locación"
        },
        {
          "type": "richtext",
          "id": "schedule",
          "label": "Horario"
        },
        {
          "type": "richtext",
          "id": "address",
          "label": "Direccón"
        },
        {
          "type": "text",
          "id": "btn_label",
          "label": "Button Texto"
        },
        {
          "type": "url",
          "id": "btn_url",
          "label": "Button URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Locations"
    }
  ]
}
{% endschema %}
