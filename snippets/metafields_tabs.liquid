{{ 'metafields_tabs.css' | asset_url | stylesheet_tag }}

<!-- Tab links -->
<div class="tab">
  {% if description != blank %}
    <button class="tablinks" id="defaultOpen" onclick="openCity(event, 'tab_description')">DESCRIPCIÃ“N</button>
  {% endif %}

  {% if prod.metafields.custom.especificaciones != blank %}
    <button class="tablinks" onclick="openCity(event, 'tab_specifications')">ESPECIFICACIONES</button>
  {% endif %}

  {% if dispatch != blank %}
    <button class="tablinks" onclick="openCity(event, 'tab_dispatch')">DESPACHO</button>
  {% endif %}

  {% if changes != blank %}
    <button class="tablinks" onclick="openCity(event, 'tab_changes')">CAMBIOS</button>
  {% endif %}
</div>

<!-- Tab content -->
{% if description != blank %}
  <div id="tab_description" class="tabcontent">{{ description }}</div>
{% endif %}

{% if prod.metafields.custom.especificaciones != blank %}
  <div id="tab_specifications" class="tabcontent">{{ prod.metafields.custom.especificaciones | metafield_tag }}</div>
{% endif %}

{% if dispatch != blank %}
  <div id="tab_dispatch" class="tabcontent">{{ dispatch }}</div>
{% endif %}

{% if changes != blank %}
  <div id="tab_changes" class="tabcontent">{{ changes }}</div>
{% endif %}

<script src="{{ 'metafields_tabs.js' | asset_url }}" defer="defer"></script>
